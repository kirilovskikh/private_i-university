<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:paddingLeft="16dp"
              android:paddingRight="16dp"
        >
    <ListView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/list"
            />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Сдано больше половины практических - можно получить удовлетворительно автоматом (при желании).\nНе сдано ни одно практическое задание - минус два балла.\nСдано меньше половины практических - на экзамене получаете не более удовлетворительно.\nСдано больше половины практических, но не все - на экзамене получаете не более хорошо."
            android:id="@+id/textView" android:layout_marginTop="-48dp" android:layout_marginLeft="16dp"
            android:textAppearance="?android:textAppearanceMedium"
            android:layout_marginRight="8dp"
            android:textColor="?android:textColorPrimary"/>
</LinearLayout>