<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/messageList"
            android:layout_alignParentLeft="true"
            android:layout_above="@+id/messageTextInput"
            android:layout_below="@+id/userProfile"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/messageTextInput"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:lines="3"
            android:textSize="10dp"
            android:layout_toLeftOf="@+id/sendMessageButton"
            />

    <ImageButton
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/sendMessageButton"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/messageList"
            android:src="@drawable/abs__ic_cab_done_holo_dark"
            android:background="@color/abs__background_holo_dark"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Посмотреть профиль собеседника"
            android:id="@+id/userProfile"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:background="@color/abs__background_holo_dark"
            android:textColor="@color/abs__primary_text_holo_dark"/>
</RelativeLayout>