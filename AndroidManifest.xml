        </activity>

        <activity
            android:name=".Marks.MarksActivity">
        </activity>

        <activity
            android:name=".Authorization.AuthorizationActivity">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

